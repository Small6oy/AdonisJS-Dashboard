{% extends 'master/dash' %}

{% block content %}
  <div class="right_col" role="main">
    <div class="">

      <div class="clearfix"></div>

      
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_content">

                    <form class="form-horizontal form-label-left">

                    {{ form.open({action: 'Dash/UserCtrl.updateUser'}) }}
                      {{ csrfField }}
                      {% if user().id == userDetail().user_id %}
                        <span class="section">Your Profile</span>
                      {% else %}
                        <span class="section">User Profile</span>
                      {% endif %}                      
                      <div class="item form-group">
                        {% if userDetail().image_url %}
                          <div class="control-label" style="width:90px; height:90px; margin: 0 auto;">
                          <img src="{{ userDetail().image_url }}" class="img-circle profile_img" width="90px">
                          </div>
                        {% endif %}
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >Profile Image</span></label>                        
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          {{ form.file('avatar',{accept:'image/*'}) }}
                        </div>
                      </div>
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >Username</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          {{ form.text('username', user().username, {class: 'form-control col-md-7 col-xs-12', placeholder: 'username', disabled: true}) }}
                        </div>
                      </div>
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >Name</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          {{ form.text('name', userDetail().name, {class: 'form-control col-md-7 col-xs-12', placeholder: 'Enter Name'}) }}
                        </div>
                      </div>
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >Surname</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          {{ form.text('surname', userDetail().surname, {class: 'form-control col-md-7 col-xs-12', placeholder: 'Enter Surname'}) }}
                        </div>
                      </div>
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >Email</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          {{ form.email('email', user().email, {class: 'form-control col-md-7 col-xs-12', placeholder: 'Enter Email'}) }}
                        </div>
                      </div>
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >Password</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          {{ form.password('password', '', {class: 'form-control col-md-7 col-xs-12', placeholder: 'Change Password'}) }}
                        </div>
                      </div>
                      <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >Repeat Password</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          {{ form.password('password2', '', {class: 'form-control col-md-7 col-xs-12', placeholder: 'Repeat Password'}) }}
                        </div>
                      </div>
                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                          {{ form.resetButton('Clear','', {class: 'btn btn-primary'}) }}
                          {{ form.submit('Update','', {class: 'btn btn-success'}) }}                        
                        </div>
                      </div>

                    {{ form.close() }}
                  </div>
                </div>
              </div>
            </div>
          </div>
    </div>
  </div>
{% endblock %}
